{
  "manifest_version": 3,
  "name": "WebTracKer",
  "description": "Track 3rd party connections on websites",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "tabs",
    "declarativeNetRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}